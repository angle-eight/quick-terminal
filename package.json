{
  "name": "quick-terminal",
  "displayName": "Quick Terminal",
  "description": "Quick terminal input extension with smart placeholders, command history, and flexible execution options",
  "version": "0.0.1",
  "publisher": "49491577-ac5f-610a-b512-edf19777bc9d",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "terminal",
    "command",
    "quick",
    "placeholder",
    "history",
    "automation",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quick-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/quick-terminal/issues"
  },
  "homepage": "https://github.com/your-username/quick-terminal#readme",
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quick-terminal.inputToTerminal",
        "title": "Input to Terminal"
      },
      {
        "command": "quick-terminal.pasteCommand",
        "title": "Paste Command to InputBox"
      },
      {
        "command": "quick-terminal.historyPrevious",
        "title": "Previous Command in History"
      },
      {
        "command": "quick-terminal.historyNext",
        "title": "Next Command in History"
      },
      {
        "command": "quick-terminal.inputWithPastedCommand",
        "title": "Input to Terminal with Pasted Command"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Quick Terminal",
      "properties": {
        "quickTerminal.autoChangeDirectory": {
          "type": "boolean",
          "default": true,
          "description": "Automatically change to the current file's directory before executing commands"
        }
      }
    },
    "keybindings": [
      {
        "command": "quick-terminal.inputToTerminal",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "quick-terminal.historyPrevious",
        "key": "up",
        "when": "quickTerminal.inputBoxActive"
      },
      {
        "command": "quick-terminal.historyNext",
        "key": "down",
        "when": "quickTerminal.inputBoxActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "overrides": {
    "punycode": "^2.3.0"
  }
}
